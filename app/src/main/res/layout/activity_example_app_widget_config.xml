<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/color"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="Change Colour"/>
        <com.skydoves.colorpickerpreference.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/hex"
            app:palette="@drawable/palette"
            app:selector="@drawable/wheel" />
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color1"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/black"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color2"
            android:layout_toEndOf="@+id/color1"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_light"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color3"
            android:layout_toEndOf="@+id/color2"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/holo_red_light"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color4"
            android:layout_toEndOf="@+id/color3"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/holo_orange_light"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color5"
            android:layout_toEndOf="@+id/color4"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/holo_green_light"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color6"
            android:layout_toEndOf="@+id/color5"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color7"
            android:layout_toEndOf="@+id/color6"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/holo_green_dark"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color8"
            android:layout_toEndOf="@+id/color7"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/white"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/color9"
            android:layout_toEndOf="@+id/color8"
            android:layout_below="@+id/color"
            android:layout_margin="5dp"
            android:background="@android:color/holo_purple"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETUP WIDGET"
            android:onClick="confirmConfiguration"
            android:background="@android:color/holo_blue_light"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_below="@+id/zonegroup"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/clicks"
            android:layout_below="@+id/color1"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Demo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:textSize="20dp"
                android:id="@+id/demo"
                android:textColor="@color/clockcolor"
                android:text="09:05 AM"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hex"
            android:orientation="vertical"
            android:layout_below="@+id/clicks">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox"
                android:text="OR Enter Hex CODE"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hex"
                android:inputType="textPassword"
                android:textSize="15sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/hexcode"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorPickerView"
            android:text="Time Format"
            android:fontFamily="@font/neosans_pro_regular"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/head"
            android:layout_marginTop="30dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:id="@+id/zonegroup"
            android:padding="10dp"
            android:layout_below="@id/head"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Hour Format"
                android:id="@+id/largehour"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Hour Format"
                android:id="@+id/smallhour"/>


        </RadioGroup>
    </RelativeLayout>
</ScrollView>